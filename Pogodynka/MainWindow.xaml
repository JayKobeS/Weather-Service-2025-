<Window x:Class="Pogodynka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pogodynka"
        mc:Ignorable="d"
        Title="Pogodynka" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Szukaj: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="cityBoxName" Width="300" Margin="0,0,10,0" />
            <ComboBox x:Name="cityComboBox" Width="150" Margin="0,0,10,0" />
            <Button x:Name="searchButton" Content="Szukaj" Width="100" Click="Search_Click" />
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="10">
            <Grid x:Name="weatherInfo">
                <TextBlock Text="Kontener z informacjami" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" />
            </Grid>
        </Border>

    </Grid>
</Window>
